.thumbnail.text-center
  figure.blog-item-small-image.mb-20
    .lightbox(data-plugin-options='{"delegate": "a", "gallery": {"enabled": true}}')
      a.image-hover-plus.image-hover-zoom.image-hover-overlay.mb-60(ng-href='{{personalInfo.image}}')
        img.img-fluid(height="100%" ng-src='{{personalInfo.image}}', alt='' )
        i.icon-hover-plus
  h2.fs-18.mt-10.mb-0(ng-show="user.personalInfo.name") {{user.personalInfo.name}} {{user.personalInfo.lastname}}
  h2.fs-18.mt-10.mb-0(ng-show="!user.personalInfo.name") Unknow
  h3.fs-11.mt-0.mb-10.text-muted(ng-show="user.personalInfo.occupation") {{user.personalInfo.occupation}}
  h3.fs-11.mt-0.mb-10.text-muted(ng-show="!user.personalInfo.occupation") Unknow
