// AVATAR TAB
#avatar.tab-pane.fade.in.active
  form.clearfix
    .form-group
      .row
        .col-md-3
        .col-md-6
          .thumbnail
            img.img-responsive(ng-src='picFile || personalInfo.image')
      .row
        .col-md-3
        .col-md-6
          form#data.ng-pristine.ng-valid(ng-show="false")
            label.label Select File
            input#image_file.custom-file-upload(type='file', name='image_file[]', data-btn-text='Select a File' nv-file-select="" uploader="uploader")
            small.text-muted.block Max file size: 10Mb (jpg/png)
            input#fileinput(type='submit', value='Submit' style='display: none;')
    .margiv-top10
      a.btn.btn-primary(style="color:white;" ng-click='saveImagen()')
        i.fa.fa-check
        |  Save Changes
      | &nbsp &nbsp
      a.btn.btn-default(ng-click='cancel()') Cancel 
